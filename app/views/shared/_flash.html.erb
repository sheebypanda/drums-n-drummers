<div class="row">
  <div class="col-md-4 col-md-offset-4 center">

    <% if flash[:notice] %>
      <div class="alert alert-success animated fadeInDown">
        <button class="close" data-dismiss="alert">×</button>
        <%= icon('angellist') + " " +flash[:notice] %>
      </div>
    <% end %>

    <% if flash[:alert] %>
    <div class="alert alert-danger animated bounceInDown">
      <button class="close" data-dismiss="alert">×</button>
      <%= icon('thumbs-o-down') + " " +flash[:alert] %>
    </div>
    <% end %>

  </div>
</div>
