<div class="row">
  <div class="col-md-4 col-md-offset-4 center">

    <% if flash[:notice] %>
    <div class="alert alert-success fade in out">
      <button class="close" data-dismiss="alert">×</button>
      <%= flash[:notice] %>
    </div>
    <% end %>

    <% if flash[:alert] %>
    <div class="alert alert-danger fade in out ">
      <button class="close" data-dismiss="alert">×</button>
      <h4><%= flash[:alert] %></h4>
    </div>
    <% end %>

  </div>
</div>
