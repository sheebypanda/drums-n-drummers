<h1>Edit</h1>

<div class="row">
  <div class="col-lg-6 col-md-12 col-sm-12 form-group">
    <%= simple_form_for @drum, :html => {:multipart => true} do |f| %>
      <%= cl_image_tag(@drum.picture) %>
      <%= f.input :picture %>
      <%= f.input :drummer_id %>

      <%= f.button :submit , class: "btn-warning btn-block" %>
    <% end %>
  </div>


<div class="row">
  <div class="col-lg-6 col-md-12 col-sm-12 form-group">
    <%= link_to "Remove", drum_path(@drum.id) , method: :delete , class: "btn btn-danger btn-block" %>
  </div>
</div>
