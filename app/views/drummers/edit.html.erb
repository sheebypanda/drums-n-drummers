<h1>Edit</h1>

<div class="row">
  <%= simple_form_for @drummer do |f| %>
    <%= f.input :name %>
    <%= cl_image_tag(@drummer.picture) %>
    <%= f.input :picture %>

    <%= f.button :submit , class: "btn-warning" %>
  <% end %>
</div>

<div class="row">
  <%= link_to "Remove", drummer_path(@drummer.id) , method: :delete , class: "btn btn-danger" %>
</div>
