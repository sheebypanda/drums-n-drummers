<h1 class="text-center">Miss...</h1>
<h2 class="text-center">Final score : <%= @lvl %></h2>

<div class="row drum">
  <%= cl_image_tag(@drum.picture, width: 500, class: "img-thumbnail") %>
</div>

<h3 class="text-center">Correct answer : <%= @drum.drummer.name %> <%= cl_image_tag(@drum.drummer.picture, :width => 70, :height => 70,
      :crop => :thumb, :gravity => :face, :radius => :max, class: "img-circle") %></h3>

<div class="text-center">
  <%= link_to icon('trash') + "Retry", '/play', class: "btn btn-info" %>
</div>
